{
  "manifest_version": 3,
  "name": "YouTube Music Modern UI for Firefox",
  "version": "0.0.1b",
  "description": "YouTube MusicのUIをApple Music風に変更します",

  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://music.youtube.com/*",
    "https://lrclib.net/api/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_idle"
    }
  ]
}
